{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "provider": ["./provider"],
      "client": ["./client"],
      "common": ["./common"],
      "utils": ["./utils"],
      "wallet": ["./wallet"]
    },
    "lib": ["es5", "es2017", "es2015", "es2017.typedarrays"],
    "outDir": "./dist/es5"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
